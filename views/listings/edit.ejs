<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit form</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PATCH" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" value="<%= listing.title %>" class="form-control"/>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="description" 
            value="Enter description" 
            class="form-control"> <%= listing.description %> </textarea>
        </div>
        <div>
            previous image <br>
            <img style="height: 100px; width: 150px;" src="<%= originalImage%>"/>
        </div>
        <div>
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image]" class="form-control" />

        </div>
        <div class="row">
            <div class="col-md-8">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" value="<%= listing.price %>" class="form-control"/>
            </div>

            <div class="col-md-4">
                <label for="country" class="form-label">country</label>
                <input type="text" name="country" value="<%= listing.country %>" class="form-control"/>
            </div>
        </div>
        <div>
            <label for="location" class="form-label">Locatin</label>
            <input type="text" name="location" value="<%= listing.location %>" class="form-control"/>
        </div>
        <button class="btn mt-3 btn-dark edit-btn">submit</button>
    </form>
</div>
</div>
</body>
